generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String?
  email          String   @unique
  passwordHash   String
  emailVerified  Boolean  @default(false)
  role           String   @default("admin")
  createdAt      DateTime @default(now())

}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description Json
  order       Int?
  createdAt   DateTime @default(now())

  images      Image[]
}

model Image {
  id        Int    @id @default(autoincrement())
  url       String
  caption   String?
  project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?
}

model Experience {
  id          Int      @id @default(autoincrement())
  title       String
  category    String
  description Json
  startDate   DateTime
  endDate     DateTime?
}